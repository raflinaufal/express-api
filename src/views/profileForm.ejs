<%- include('partials/header', { title: 'Profile Form' }) %>

    <h1>
        <%= profile ? 'Edit Profile' : 'Add New Profile' %>
    </h1>
    <form action="<%= profile ? '/profiles/' + profile.id + '?_method=PUT' : '/profiles' %>" method="POST">
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" class="form-control" id="fullName" name="fullName"
                value="<%= profile ? profile.fullName : '' %>" required>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address"
                value="<%= profile ? profile.address : '' %>" required>
        </div>
        <div class="form-group">
            <label for="image">Image URL</label>
            <input type="text" class="form-control" id="image" name="image" value="<%= profile ? profile.image : '' %>">
        </div>
        <button type="submit" class="btn btn-primary">
            <%= profile ? 'Update' : 'Create' %> Profile
        </button>
    </form>

    <%- include('partials/footer') %>