<%- include('partials/header', { title: 'Manage Users' }) %>

    <h1>Manage Users</h1>
    <a href="/users/new" class="btn btn-primary mb-3">Add New User</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.role %>
                    </td>
                    <td>
                        <a href="/users/<%= user.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <button onclick="deleteUser('<%= user.id %>')" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('partials/footer') %>