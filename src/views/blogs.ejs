<%- include('partials/header', { title: 'Manage Blogs' }) %>

    <h1>Manage Blogs</h1>
    <a href="/blogs/new" class="btn btn-primary mb-3">Add New Blog</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Content</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% blogs.forEach(blog=> { %>
                <tr>
                    <td>
                        <%= blog.id %>
                    </td>
                    <td>
                        <%= blog.title %>
                    </td>
                    <td>
                        <%= blog.content %>
                    </td>
                    <td><img src="<%= blog.image %>" alt="Blog Image" width="50"></td>
                    <td>
                        <a href="/blogs/<%= blog.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <button onclick="deleteBlog('<%= blog.id %>')" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <%- include('partials/footer') %>