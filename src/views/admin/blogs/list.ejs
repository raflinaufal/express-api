<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Blogs</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body>
    <div class="container mt-5">
        <h2>Manage Blogs</h2>
        <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#createBlogModal">Add New Blog</button>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% blogs.forEach(blog=> { %>
                    <tr>
                        <td>
                            <%= blog.title %>
                        </td>
                        <td>
                            <%= blog.content %>
                        </td>
                        <td><img src="<%= blog.image %>" alt="<%= blog.title %>" width="100"></td>
                        <td>
                            <button type="button" class="btn btn-info"
                                onclick="editBlog('<%= blog.id %>')">Edit</button>
                            <button type="button" class="btn btn-danger"
                                onclick="confirmDeleteBlog('<%= blog.id %>')">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('addModal') %>
        <%- include('editModal') %>
            <%- include('deleteModal') %>

                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>