<%- include('../../layouts/adminLayout', { title: 'Manage Profiles' }) %>


    <div class="container mt-4">
        <h1>
            <%= title %>
        </h1>
        <a href="#" class="btn btn-primary mb-3" data-toggle="modal" data-target="#profileModal">Add New Profile</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% profiles.forEach(profile=> { %>
                    <tr>
                        <td>
                            <%= profile.id %>
                        </td>
                        <td>
                            <%= profile.fullName %>
                        </td>
                        <td>
                            <%= profile.address %>
                        </td>
                        <td>
                            <%= profile.image %>
                        </td>
                        <td>
                            <button class="btn btn-warning btn-sm"
                                onclick="editProfile('<%= profile.id %>')">Edit</button>
                            <button class="btn btn-danger btn-sm"
                                onclick="deleteProfile('<%= profile.id %>')">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('./modal') %>