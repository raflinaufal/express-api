<%- include('partials/header', { title: title }) %>

    <h1>
        <%= title %>
    </h1>
    <form id="entity-form" action="<%= formAction %>" method="<%= isEditing ? 'PUT' : 'POST' %>">
        <% if (entityType==='user' ) { %>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email"
                    value="<%= entity ? entity.email : '' %>" required>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= entity ? entity.name : '' %>">
            </div>
            <div class="form-group">
                <label for="role">Role</label>
                <select class="form-control" id="role" name="role" required>
                    <option value="user" <%=entity && entity.role==='user' ? 'selected' : '' %>>User</option>
                    <option value="admin" <%=entity && entity.role==='admin' ? 'selected' : '' %>>Admin</option>
                </select>
            </div>
            <% if (!isEditing) { %>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <% } %>
                    <% } else if (entityType==='profile' ) { %>
                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName"
                                value="<%= entity ? entity.fullName : '' %>" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address"
                                value="<%= entity ? entity.address : '' %>" required>
                        </div>
                        <div class="form-group">
                            <label for="image">Image URL</label>
                            <input type="text" class="form-control" id="image" name="image"
                                value="<%= entity ? entity.image : '' %>">
                        </div>
                        <% } else if (entityType==='blog' ) { %>
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    value="<%= entity ? entity.title : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="content">Content</label>
                                <textarea class="form-control" id="content" name="content"
                                    required><%= entity ? entity.content : '' %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="image">Image URL</label>
                                <input type="text" class="form-control" id="image" name="image"
                                    value="<%= entity ? entity.image : '' %>">
                            </div>
                            <% } %>
                                <button type="submit" class="btn btn-primary">
                                    <%= isEditing ? 'Update' : 'Create' %>
                                        <%= entityType %>
                                </button>
    </form>

    <%- include('partials/footer') %>